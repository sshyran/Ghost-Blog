{{!< default}}

<header class="author-header" {{#if author.cover_image}}style="background-image: url({{author.cover_image}})"{{/if}}>
    <div class="vertical">
        <h1 {{#if author.cover_image}}style="color: #fff"{{/if}}>Posts by {{author.name}}</h1>
    </div>
</header>

<div class="wrap">
    <section class="blog-content">

        {{#foreach posts}}

        <article class="{{post_class}}">
            <header class="post-header">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                <section class="post-meta">
                    <img class="author-img" src="{{author.profile_image}}" alt="Author image" nopin="nopin" />
                    <span class="author-name">{{author}}</span>
                    &bull;
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="D MMM YYYY"}}</time>
                    <span class="tags">{{tags prefix="â€¢ Subject: "}}</span>
                </section>
            </header>
            <section class="post-excerpt">
                <p>{{excerpt words="55"}}&hellip; <a class="read-more" href="{{url}}">Read More</a></p>
            </section>
        </article>

        {{/foreach}}

        {{pagination}}

    </section>

    {{> sidebar}}

</div>
